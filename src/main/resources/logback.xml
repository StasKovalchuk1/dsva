<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define a pattern that includes the logical clock value -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - [LogicalClock:%X{logicalClock}] %msg%n"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>node.log</file>
        <append>true</append>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Logger for your application -->
    <logger name="node.Node" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Suppress Javalin logs by setting higher log level -->
    <logger name="io.javalin" level="WARN" />

    <!-- Root Logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>